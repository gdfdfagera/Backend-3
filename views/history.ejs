<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pokemon Cards</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/css/main.css">
</head>
<body>
  <nav class="navbar">
    <div class="logo">Assignment 3</div>
    <ul class="nav-links">
      <li><a href="/pdfSave">Save My History</a></li>
      <li><a href="/history">History</a></li>
      <li><a href="/findPokemon">Find Pockemon</a></li>
      <li><a href="/main">Pockemons</a></li>
      <li><a href="/numbers">Numbers</a></li>
      <li><a href="/login">Logout</a></li>
    </ul>
  </nav>

  <main class="container">
    <section id="section1">
        <h2>Number Facts</h2>
        <ul id="numberFactsList">
          <% for (const fact of numberFacts) { %>
            <li>
              <strong>Input:</strong> <%= fact.input %>, 
              <strong>Output:</strong> <%= fact.output %>, 
              <strong>Timestamp:</strong> <%= fact.timestamp %>
            </li>
          <% } %>
        </ul>
        <button onclick="showSection(2)">Go to Section 2</button>
      </section>
  
      <section id="section2" style="display: none;">
        <h2>Pokemons</h2>
        <div id="pokemonCardsContainer" class="card-container">
          <% for (const pokemon of pokemons) { %>
            <div class="card">
              <img src="<%= pokemon.image %>" alt="<%= pokemon.name %>">
              <h3><%= pokemon.name %></h3>
              <p>Height: <%= pokemon.height %> m</p>
              <p>Weight: <%= pokemon.weight %> kg</p>
              <p>Abilities: <%= pokemon.abilities.join(', ') %></p>
            </div>
          <% } %>
        </div>
        <button onclick="showSection(1)">Go to Section 1</button>
      </section>
  </main>

  <footer class="bg-body-tertiary text-center text-lg-start">
    <div class="text-center p-3" style="background-color: rgb(201, 196, 196);">
      Gainatulin Dias
      SE-2205
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script>
    function showSection(sectionNumber) {
      document.getElementById('section1').style.display = sectionNumber === 1 ? 'block' : 'none';
      document.getElementById('section2').style.display = sectionNumber === 2 ? 'block' : 'none';
    }
  </script>
</body>
</html>
